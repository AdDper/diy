<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_login_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zilong.findjob.aishangzu.content_fragment.LoginPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/login_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:text="爱上租"
            android:textSize="40sp"/>

        <LinearLayout
            android:id="@+id/login_image"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_quick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_pop_up2"
                android:visibility="invisible"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/image_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_pop_up2"
                android:visibility="invisible"
                android:gravity="center"/>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_login_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@id/login_image"
            android:gravity="center">

            <TextView
                android:id="@+id/login_text_quick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="快捷登录"
                android:textSize="19sp"
                android:textColor="#EDEDED"
                android:gravity="center"/>

            <TextView
                android:id="@+id/login_text_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="密码登录"
                android:textColor="#EDEDED"
                android:textSize="19sp"
                android:gravity="center"/>
        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fg_login"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </FrameLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/selector_login"
            android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用以下方式登录"
        android:textColor="#EDEDED"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@mipmap/icon_wechat_login"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@mipmap/icon_weibo_login"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@mipmap/icon_qq_login"/>

    </LinearLayout>




</LinearLayout>
